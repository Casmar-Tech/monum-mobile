<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F713B">

    <ImageView
        android:id="@+id/figuresImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/figures"
        android:scaleType="centerCrop"/>

    <!-- View invisible que sirve como referencia para el centro vertical -->
    <View
        android:id="@+id/centerReference"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>

    <!-- Posicionar monumImage justo arriba del centro -->
    <ImageView
        android:id="@+id/monumImage"
        android:layout_width="176dp"
        android:layout_height="176dp"
        android:layout_above="@id/centerReference"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/monum_logo_white"
        android:scaleType="centerInside"/>

    <!-- Posicionar nomImage justo debajo de monumImage -->
    <ImageView
        android:id="@+id/nomImage"
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:layout_below="@id/monumImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:src="@drawable/white_text_logo"
        android:scaleType="centerInside"/>
</RelativeLayout>
